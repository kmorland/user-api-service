{
  "compilerOptions": {
    "lib": [
      "es2017"
    ],
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "target": "es2017",
    "outDir": "lib"
  },
  "exclude": [
    "node_modules",
    "__tests__"
  ]
}